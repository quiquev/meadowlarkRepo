<!doctype html>
<html>
  <head>
    <title>Meadowlark Travel</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    {{#if showTests}}
      <link rel="stylesheet" href="/vendor/mocha.css">
    {{/if}}
    <script type="text/javascript" src="//code.jquery.com/jquery-3.0.0.min.js"></script>
    {{{_sections.head}}}
  </head>
  <body>
    <header>
        <img src="/img/tesla_banner2.png" alt="Meadowlark Travel Logo">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/newsletter">Newsletter</a></li>
                    <li><a href="/nursery-rhyme">Nursery Rhyme</a></li>
                    <li><a href="/contest/vacation-photo">Vacation Photo</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>
    {{#if flash}}
        <div class="alert alert-dismissible alert-{{flash.type}}">
            <button type="button" class="close"data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>{{flash.intro}}</strong> {{{flash.message}}}
        </div>
    {{/if}}
    {{{body}}}
    {{{_sections.jquery}}}
    {{#if showTests}}
      <div id="mocha"></div>
      <script type="text/javascript" src="/vendor/mocha.js"></script>
      <script type="text/javascript" src="/vendor/chai.js"></script>
      <script type="text/javascript">
        mocha.ui('tdd');
        var assert = chai.assert;
      </script>
      <script type="text/javascript" src="/qa/tests-global.js"></script>
      {{#if pageTestScript}}
        <script type="text/javascript" src="{{pageTestScript}}"></script>
      {{/if}}
      <script type="text/javascript">
        mocha.run();
      </script>
    {{/if}}
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
